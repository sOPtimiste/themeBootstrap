{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	{% for flashError in app.flashes('verify_email_error') %}
		<div class="alert alert-danger" role="alert">{{ flashError }}</div>
	{% endfor %}

	<div class="container my-4">

		<h1>Inscription</h1>

		{{ form_start(registrationForm) }}
		<div class="row">
			<div class="col-md-3">{{ form_row(registrationForm.firstname) }}</div>
			<div class="col-md-3">{{ form_row(registrationForm.lastname) }}</div>
			<div class="col-md-3">{{ form_row(registrationForm.username) }}</div>
			<div class="col-md-3">{{ form_row(registrationForm.phoneNumber) }}</div>
		</div>

		<div class="row">
			<div class="col-md-4">{{ form_row(registrationForm.email) }}</div>
			<div class="col-md-4">{{ form_row(registrationForm.plainPassword) }}</div>
			<div class="col-md-4">{{ form_row(registrationForm.status) }}</div>
		</div>
		<div class="row">
			{{ form_row(registrationForm.agreeTerms) }}
		</div>
		<div class="row">
			<div class="col-md-4 offset-4">

				<button type="submit" class="btn btn-outline-primary btn-lg">S'inscrire</button>
			</div>
		</div>
		{{ form_end(registrationForm) }}
	</div>
{% endblock %}
