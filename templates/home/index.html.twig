        </div>


<h2 class="h1 my-5" >Nos proprietaires stars</h2>
        <div class="row">

        {% for announce in announces %}
            <div class="col mb-3">
                <div class="card border-secondary">
                    <div class="card-body">
                        <h4 class="card-title">
                             {{ announce.title }} 
                        </h4>
                        
                        <hr>

                        <div class="card-text">
                            <img src="{{vich_uploader_asset(announce,'coverImageFile')| imagine_filter('miniature')}}" alt="Image de {{ announce.title }}" class="float-left mr-3">
                            <p>{{announce.introduction}}</p>
                            <a href="{{path('app_announce_show',{id: announce.id})}}" class="btn btn-success float-right"> En savoir plus</a>
                        </div>
                    </div>
                </div> 
            </div>

        {% endfor %}

        </div>

</div>
{% endblock %}
