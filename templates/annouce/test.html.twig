{% extends 'base.html.twig' %}

{% block title %}Details Announce !{% endblock %}

{% block body %}
  <center><h3>{{announce.title}}</h3></center>
  <div class="container">{# debut container#}
      <div class="row">{# debut row #}
          <div class="col-12 col-md-12">{# debut col-12#}

            <div class="card">{# debut card #}
                <div class="card-body">
                  <h5 class="card-title">{{announce.title}}</h5>
                  <p class="card-text"><strong>{{announce.price}} FCFA</strong></p>
                  <p class="card-text"><small class="text-muted">publié à {{announce.createdAt|date("m/d/Y h:m")}}</small></p>
                </div>
                      <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
                          <div class="carousel-inner">
                            <div class="carousel-item active">
                              <img src="{{announce.coverImage}}" width="100%" height="600px"  class="d-block w-100" alt="test1">
                            </div>
                            <div class="carousel-item">
                              <img src="{{asset('images/house3.jpg')}}" width="100%" height="600px" class="d-block w-100" alt="test2">
                            </div>
                            <div class="carousel-item">
                              <img src="{{asset('images/house4.jpg')}}" width="100%" height="600px" class="d-block w-100" alt="test3">
                            </div>
                          </div>
                          <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                          </button>
                          <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                          </button>
                        </div>
                {#<img src="{{announce.coverImage}}" class="card-img-bottom" class="img-fluid img-thumbnil" alt="...">#}

            </div>{# fin card #}
          
          </div>{# fin col-12 #}
      </div>{# fin row #}

      <div class="row my-3">{# debut row#}
          <div class="col-12 col-md-8">{# debut col-8#}
              <p>{{announce.description}}</p>
          </div>{# fin col-8#}
          <div class="col-12 col-md-4">{# debut col-8#}
                <div class="card text-white bg-primary mb-3" style="max-width: 18rem;">
                  <div class="card-header">Author: M FALL</div>
                  <div class="card-body">
                    <h5 class="card-title">Email : sall@sall.com</h5>
                    <p class="card-text">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Et, magnam?</p>
                    <h6></h6>
                  </div>
          </div>{# fin col-8#}
      
      </div>{# fin row#}

      <div class="row">{# debut row#}
          {% for image in announce.images %}
          <div class="col-12 col-md-2">{# debut col row#}
            <img src="{{image.imageUrl}}" class="card-img-bottom" class="img-fluid img-thumbnil" alt="imagesCom" width="70px">
          </div>{# fin col#}
          {% endfor %}
        {# #}  {% for comment in announce.comments %}
          <div class="col-12 col-md-6 offset-4">{# debut col row#}
            <article>
                <h1>Commentaires</h1>
                <p>{{comment.content}}</p>
                <p><strong>Visiteur : {{comment.author}}</strong></p>
                <p><small> Date : {{comment.createdAt|date("m/d/Y h:m")}}</small></p>
                <p>Email: {{comment.email}}</p>
            </article>
          </div>{# fin col#}
          {% endfor %}
      </div>{# fin row#}
  </div>  {# fin  container#}
    

{% endblock %}

<div class="container my-5">{# debut container #}
      <div class="row">

        <div class="card bg-dark text-white">
          <img src="{{announce.coverImage}}" class="card-img" alt="mage de couverture">
            <div class="card-img-overlay">
                <h3 class="card-title py-3" style="text-align: center;">{{announce.title}}</h3>
                <h5 class="card-text py-3" style="text-align: center;">{{announce.introduction}}.</h5>
                <p class="card-text py-3" style="text-align: center;"><strong>{{announce.rooms}} chambres  {{announce.price}} F/mois</strong></p>
            </div>
        </div>

      </div>
    </div>{# end container #}
    <div class="container">{# debut container #}
        <div class="row">
            <figure>
                <blockquote class="blockquote">
                  <p>{{announce.description}}</p>
                </blockquote>
                <figcaption class="blockquote-footer">
                  publiée il ya <cite title="Source Title">{{announce.createdAt|date("m/d/Y h:m")}}</cite>
                </figcaption>
            </figure>
        </div>
    </div>{# end container #}
    <div class="container">{# debut container #}
        <div class="row">
              {% for comment in announce.comments %}
                
              <div class="col-md-8">
                  <div class="card">
                      <div class="card-body">
                       {{comment.content}}
                      </div>
                  </div>

              </div>
              {% endfor %}

              {# for item in items #}

                <div class="col-md-4">

                    <div class="card" style="width: 18rem;">
                        <img src="{{asset('images/user.jpeg')}}" class="img-circle" alt="test">
                        <div class="card-body">
                          <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                        </div>
                    </div>
                </div>
                
              {# endfor #}
        </div>
    </div>{# end container #}
{% endblock %}


